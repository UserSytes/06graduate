<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<!-- service的配置文件 -->
<beans>
	<bean id="loginAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.LoginAction">
		<property name="loginService">
			<ref bean="loginService" />
		</property>
	</bean>
	<bean id="teacherInfoAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.TeacherInfoAction">
		<property name="teacherInfoService">
			<ref bean="teacherInfoService" />
		</property>
		<property name="superAdminService">
			<ref bean="superAdminService" />
		</property>
	</bean>
	<bean id="studentAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.StudentAction">
		<property name="studentInfoService">
			<ref bean="studentInfoService" />
		</property>
		<property name="superAdminService">
			<ref bean="superAdminService" />
		</property>
	</bean>
	<bean id="courseAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.CourserAction">
		<property name="courseService">
			<ref bean="courseService" />
		</property>
		<property name="teacherInfoService">
			<ref bean="teacherInfoService" />
		</property>
		<property name="departmentService">
			<ref bean="departmentService" />
		</property>
		<property name="studentCourseService">
			<ref bean="studentCourseService" />
		</property>
	</bean>
	<bean id="courseInfoAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.CourseInfoAction">
		<property name="courseInfoService">
			<ref bean="courseInfoService" />
		</property>
		<property name="applicationFormService">
			<ref bean="applicationFormService" />
		</property>
	</bean>
	<bean id="schoolManageAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.SchoolManageAction">
		<property name="superAdminService">
			<ref bean="superAdminService" />
		</property>
		<property name="adminService">
			<ref bean="adminService" />
		</property>
	</bean>
	<bean id="adminAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.AdminAction">
		<property name="adminService">
			<ref bean="adminService" />
		</property>
	</bean>
	<bean id="newsAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.NewsAction">
		<property name="newsService">
			<ref bean="newsService" />
		</property>
	</bean>
	
	<!-- 前台 -->
	<bean id="executeViewAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.ExecuteViewAction">
		<property name="searchCourseService">
			<ref bean="searchCourseService" />
		</property>
		<property name="departmentService">
			<ref bean="departmentService" />
		</property>
	</bean>
	<bean id="homePageAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.HomePageAction">
		<property name="newsService">
			<ref bean="newsService" />
		</property>
		<property name="loginService">
			<ref bean="loginService" />
		</property>
		<property name="applicationFormService">
			<ref bean="applicationFormService" />
		</property>
		<property name="courseService">
			<ref bean="courseService" />
		</property>
	</bean>
	<bean id="viewDetailAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.ViewDetailAction">
		<property name="applicationFormService">
			<ref bean="applicationFormService" />
		</property>
		<property name="courseInfoService">
			<ref bean="courseInfoService" />
		</property>
		<property name="teacherTeamService">
			<ref bean="teacherTeamService" />
		</property>
		<property name="achievementService">
			<ref bean="achievementService" />
		</property>
		<property name="chapterService">
			<ref bean="chapterService" />
		</property>
		<property name="coursewareService">
			<ref bean="coursewareService" />
		</property>
		
	</bean>
	<bean id="teacherTeamAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.TeacherTeamAction">
		<property name="teacherTeamService">
			<ref bean="teacherTeamService" />
		</property>
	</bean>
	
	<!-- 课程管理 （教师） -->
	<bean id="courseChapterAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.CourseChapterAction">
		<property name="chapterService">
			<ref bean="chapterService" />
		</property>
	</bean>
	<bean id="coursewareAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.CoursewareAction">
		<property name="chapterService">
			<ref bean="chapterService" />
		</property>
		<property name="coursewareService">
			<ref bean="coursewareService" />
		</property>
	</bean>
	<bean id="exerciseAction" scope="prototype"
		class="cn.edu.xmu.course.web.action.ExerciseAction">
		<property name="chapterService">
			<ref bean="chapterService" />
		</property>
		<property name="exerciseService">
			<ref bean="exerciseService" />
		</property>
	</bean>
</beans>