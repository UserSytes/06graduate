<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<!-- service的配置文件 -->
<beans>
	<bean id="loginService" class="cn.edu.xmu.course.service.impl.LoginService">
		<property name="teacherDAO">
			<ref bean="TeacherDAO" />
		</property>
			<property name="studentDAO">
			<ref bean="StudentDAO" />
		</property>
		<property name="administratorDAO">
			<ref bean="AdministratorDAO" />
		</property>
		<property name="superAdminDAO">
			<ref bean="SuperAdminDAO" />
		</property>
	</bean>
	
	<!-- 教师信息管理 -->
	<bean id="teacherInfoServiceTarget" class="cn.edu.xmu.course.service.impl.TeacherInfoService">
		<property name="teacherDAO">
			<ref bean="TeacherDAO" />
		</property>
		<property name="userInfoDAO">
			<ref bean="UserInfoDAO" />
		</property>
	</bean>	
	
	<!-- 学生信息管理 -->
	<bean id="studentInfoServiceTarget" class="cn.edu.xmu.course.service.impl.StudentInfoService">
		<property name="studentDAO">
			<ref bean="StudentDAO" />
		</property>
		<property name="userInfoDAO">
			<ref bean="UserInfoDAO" />
		</property>
	</bean>	
	
	<!-- 教师申报课程管理 -->
	<bean id="courseServiceTarget" class="cn.edu.xmu.course.service.impl.CourseService">
		<property name="courseDAO">
			<ref bean="CourseDAO" />
		</property>
	</bean>
	<bean id="studentCourseServiceTarget" class="cn.edu.xmu.course.service.impl.StudentCourseService">
		<property name="studentCourseDAO">
			<ref bean="StudentCourseDAO" />
		</property>
		<property name="studentDAO">
			<ref bean="StudentDAO" />
		</property>
	</bean>	
	
	<!-- 院系管理 -->
	<bean id="departmentServiceTarget" class="cn.edu.xmu.course.service.impl.DepartmentService">
		<property name="departmentDAO">
			<ref bean="DepartmentDAO" />
		</property>
	</bean>	
	
	<!--院系管理模块-->
	<bean id="superAdminServiceTarget" class="cn.edu.xmu.course.service.impl.SuperAdminService">
		<property name="schoolDAO">
			<ref bean="SchoolDAO" />
		</property>
		<property name="departmentDAO">
			<ref bean="DepartmentDAO" />
		</property>
		<property name="gradeDAO">
			<ref bean="GradeDAO" />
		</property>
	</bean>
	
	<!--新闻管理模块-->
	<bean id="newsServiceTarget" class="cn.edu.xmu.course.service.impl.NewsService">
		<property name="newsDAO">
			<ref bean="NewsDAO" />
		</property>
	</bean>
	
	<!--管理员-->
	<bean id="adminServiceTarget" class="cn.edu.xmu.course.service.impl.AdminService">
		<property name="administratorDAO">
			<ref bean="AdministratorDAO" />
		</property>
		<property name="superAdminDAO">
			<ref bean="SuperAdminDAO" />
		</property>
	</bean>
	<!-- 前台 -->
	<bean id="searchCourseServiceTarget" class="cn.edu.xmu.course.service.impl.SearchCourseService">
		<property name="courseDAO">
			<ref bean="CourseDAO" />
		</property>
	</bean>
	<bean id="applicationFormServiceTarget" class="cn.edu.xmu.course.service.impl.ApplicationFormService">
		<property name="applicationFormDAO">
			<ref bean="ApplicationFormDAO" />
		</property>
	</bean>
	<bean id="courseInfoServiceTarget" class="cn.edu.xmu.course.service.impl.CourseInfoService">
		<property name="courseInfoDAO">
			<ref bean="CourseInfoDAO" />
		</property>
	</bean>
	<bean id="teacherTeamServiceTarget" class="cn.edu.xmu.course.service.impl.TeacherTeamService">
		<property name="teacherTeamDAO">
			<ref bean="TeacherTeamDAO" />
		</property>
	</bean>
	<bean id="achievementServiceTarget" class="cn.edu.xmu.course.service.impl.AchievementService">
		<property name="achievementDAO">
			<ref bean="AchievementDAO" />
		</property>
	</bean>
</beans>