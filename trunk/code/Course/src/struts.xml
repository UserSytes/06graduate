<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.ui.theme" value="simple" />
	<package name="struts" extends="struts-default">
		<action name="loginAction" method="login"
			class="cn.edu.xmu.course.web.action.LoginAction">
			<result name="success">/teacher/index.jsp</result>
			<result name="error">/teacher/error.jsp</result>
		</action>
		
		<!--教师子系统-->
		<!-- 个人信息管理 -->
		<action name="changeTeacherInfoAction" method="changeTeacherInfo"
			class="teacherInfoAction">
			<result name="success">/commons/prompt.jsp</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="getTeacherInfoAction" method="getTeacherInfo"
			class="teacherInfoAction">
			<result name="success">/teacher/teacherinfo.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="changePwdAction" method="changePassword" class="teacherInfoAction">
			<result name="success">/commons/prompt.jsp</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		
		<!-- 课程申报管理 -->
		<action name="addNewCourseAction" method="addNewCourse" class="courseAction">
			<result name="success">/commons/prompt.jsp</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="getMyCourseAction" method="findMyCoursesList" class="courseAction">
			<result name="success">/teacher/mycourseslist.jsp</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="deleteCourseAction" method="deleteCourse" class="courseAction">
			<result name="success">/teacher/prompt.jsp</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		
		<!--超级管理员-->
		<!--1、学院管理模块-->
		<action name="addSchoolAction" method="addSchool" class="schoolManageAction">
			<result name="success">/commons/prompt.jsp</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="findAllSchoolsAction" method="findAllSchools"
			class="schoolManageAction">
			<result name="allSchools">/admin/schoolmanage/schoollist.jsp
			</result>
			<result name="error">/commons/prompt.jsp</result>
		</action>
		<action name="findDepartmentAction" method="findDepartmentBySchool"
			class="schoolManageAction">
			<result name="success">/admin/schoolmanage/departmentlist.jsp
			</result>
			<result name="error">/commons/prompt.jsp</result>
		</action>
		<action name="deleteSchoolAction" method="deleteSchool" class="schoolManageAction">
			<result name="success">/admin/schoolmanage/schoollist.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="goAddAdminAction" method="findAllSchools" class="schoolManageAction">
			<result name="allSchools">/admin/schoolmanage/addadmin.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="addAdminAction" method="addAdmin" class="schoolManageAction">
			<result name="success">/commons/prompt.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="addGradeAction" method="addGrade" class="schoolManageAction">
			<result name="success">/commons/prompt.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="deleteDepartmentAction" method="deleteDepartment" class="schoolManageAction">
			<result name="success">/admin/schoolmanage/departmentlist.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="goAddDepartmentAction" method="goAddDepartment" class="schoolManageAction">
			<result name="success">/admin/schoolmanage/adddepartment.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="addDepartmentAction" method="addDepartment" class="schoolManageAction">
			<result name="success">/commons/prompt.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="allAdminAction" method="getAllAdmin" class="schoolManageAction">
			<result name="success">/admin/schoolmanage/adminlist.jsp
			</result>
			<result name="error">/commons/prompt.jsp</result>
		</action>
		<action name="deleteAdminAction" method="deleteAdmin" class="schoolManageAction">
			<result name="success">/admin/schoolmanage/adminlist.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="allGradeAction" method="findAllGrade" class="schoolManageAction">
			<result name="success">/admin/schoolmanage/gradelist.jsp
			</result>
			<result name="error">/commons/prompt.jsp</result>
		</action>
		<action name="deleteGradeAction" method="deleteGrade" class="schoolManageAction">
			<result name="success">/admin/schoolmanage/gradelist.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<!--学院管理员-->
		
		<!-- 前台 -->
		<action name="findCourseByDepartmentAction" method="findCourseByDepartment" class="ExecuteViewAction">
			<result name="courses">/homepage/courseList.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
		<action name="findCourseByNameAction" method="findCourseByName" class="ExecuteViewAction">
			<result name="courses">/homepage/courseList.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
				<action name="enterCourseAction" method="enterCourse" class="ExecuteViewAction">
			<result name="course">/homepage/courseIndex.jsp
			</result>
			<result name="error">/commons/error.jsp</result>
		</action>
	</package>
</struts>