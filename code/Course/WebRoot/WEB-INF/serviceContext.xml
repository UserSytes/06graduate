<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<!-- service的配置文件 -->
<beans>
	<bean id="loginService" class="cn.edu.xmu.course.service.impl.LoginService">
		<property name="teacherDAO">
		<ref bean="TeacherDAO"/>
		</property>
	</bean>
	
	<bean id="teacherInfoService" class="cn.edu.xmu.course.service.impl.TeacherInfoService">
		<property name="teacherDAO">
		<ref bean="TeacherDAO"/>
		</property>
		<property name="userInfoDAO">
		<ref bean="UserInfoDAO"/>
		</property>
	</bean>	
	
	<!--超级管理员-->
	<bean id="superAdminService"
		class="cn.edu.xmu.course.service.impl.SuperAdminService">
		<property name="superAdminDAO">
			<ref bean="SuperAdminDAO" />
		</property>
		<property name="administratorDAO">
			<ref bean="AdministratorDAO" />
		</property>
		<property name="schoolDAO">
			<ref bean="SchoolDAO" />
		</property>
		<property name="departmentDAO">
			<ref bean="DepartmentDAO" />
		</property>
		<property name="newsDAO">
			<ref bean="NewsDAO" />
		</property>
		<property name="gradeDAO">
			<ref bean="GradeDAO" />
		</property>
	</bean>
	
	<!--学院管理员-->
	<bean id="adminService"
		class="cn.edu.xmu.course.service.impl.AdminService">
	</bean>
	
</beans>